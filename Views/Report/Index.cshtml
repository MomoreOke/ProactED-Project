@model FEENALOoFINALE.Models.ReportDashboardViewModel
@{
    ViewData["Title"] = "Reports Dashboard";
    var breadcrumbs = new List<(string Text, string? Controller, string? Action, object? RouteValues)>
    {
        ("Dashboard", "Dashboard", "Index", null),
        ("Reports", null, null, null)
    };
}

@await Html.PartialAsync("_Breadcrumb", breadcrumbs)

<style>
    .reports-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    
    .reports-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }
    
    .reports-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }
    
    .reports-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin: 0.5rem 0 0 0;
    }
    
    .report-card {
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
        height: 100%;
        overflow: hidden;
    }
    
    .report-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 45px rgba(102, 126, 234, 0.15);
        border-color: rgba(102, 126, 234, 0.3);
    }
    
    .report-card-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .report-card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .report-card-body {
        padding: 1.5rem;
    }
    
    .report-metric {
        font-size: 2.5rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.5rem;
    }
    
    .report-description {
        color: #6c757d;
        margin-bottom: 1rem;
    }
    
    .btn-report {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 15px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
    }
    
    .btn-report:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        color: white;
        text-decoration: none;
    }
    
    .recent-activity-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.05);
        margin-bottom: 2rem;
    }
    
    .activity-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 15px 15px 0 0;
    }
    
    .activity-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .activity-body {
        padding: 1.5rem;
    }
    
    .activity-item {
        padding: 1rem;
        border-bottom: 1px solid #f1f3f4;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: background-color 0.2s ease;
    }
    
    .activity-item:hover {
        background-color: rgba(102, 126, 234, 0.05);
    }
    
    .activity-item:last-child {
        border-bottom: none;
    }
    
    .activity-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }
    
    .activity-details h6 {
        margin: 0;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .activity-details small {
        color: #6c757d;
    }
    
    .activity-date {
        color: #6c757d;
        font-size: 0.9rem;
    }
</style>

<div class="reports-container">
    <div class="container-fluid">
        <!-- Reports Header -->
        <div class="reports-header">
            <h1 class="reports-title">
                <i class="bi bi-graph-up me-3"></i>
                Reports & Analytics
            </h1>
            <p class="reports-subtitle">Comprehensive reporting and data analysis for maintenance operations</p>
        </div>

        <!-- Report Cards Row -->
        <div class="row g-4 mb-4">
            <!-- Equipment Report -->
            <div class="col-xl-3 col-md-6">
                <div class="report-card">
                    <div class="report-card-header">
                        <h5 class="report-card-title">
                            <i class="bi bi-gear text-primary"></i>
                            Equipment Report
                        </h5>
                    </div>
                    <div class="report-card-body">
                        <div class="report-metric">@Model.TotalEquipment</div>
                        <p class="report-description">Total equipment in system</p>
                        <a asp-controller="Equipment" asp-action="Index" class="btn-report">
                            <i class="bi bi-eye me-2"></i>View Equipment
                        </a>
                    </div>
                </div>
            </div>

            <!-- Alerts Report -->
            <div class="col-xl-3 col-md-6">
                <div class="report-card">
                    <div class="report-card-header">
                        <h5 class="report-card-title">
                            <i class="bi bi-exclamation-triangle text-warning"></i>
                            Alerts Report
                        </h5>
                    </div>
                    <div class="report-card-body">
                        <div class="report-metric">@Model.TotalAlerts</div>
                        <p class="report-description">System alerts and notifications</p>
                        <a asp-action="Alerts" class="btn-report">
                            <i class="bi bi-file-earmark-text me-2"></i>View Report
                        </a>
                    </div>
                </div>
            </div>

            <!-- Maintenance Report -->
            <div class="col-xl-3 col-md-6">
                <div class="report-card">
                    <div class="report-card-header">
                        <h5 class="report-card-title">
                            <i class="bi bi-wrench text-info"></i>
                            Maintenance Report
                        </h5>
                    </div>
                    <div class="report-card-body">
                        <div class="report-metric">@Model.TotalMaintenanceLogs</div>
                        <p class="report-description">Maintenance activities logged</p>
                        <a asp-action="MaintenanceLogs" class="btn-report">
                            <i class="bi bi-file-earmark-text me-2"></i>View Report
                        </a>
                    </div>
                </div>
            </div>

            <!-- Inventory Report -->
            <div class="col-xl-3 col-md-6">
                <div class="report-card">
                    <div class="report-card-header">
                        <h5 class="report-card-title">
                            <i class="bi bi-box-seam text-success"></i>
                            Inventory Report
                        </h5>
                    </div>
                    <div class="report-card-body">
                        <div class="report-metric">@Model.TotalInventoryItems</div>
                        <p class="report-description">Inventory items in stock</p>
                        <a asp-action="Inventory" class="btn-report">
                            <i class="bi bi-file-earmark-text me-2"></i>View Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Row -->
        <div class="row g-4">
            <!-- Recent Maintenance Logs -->
            <div class="col-xl-6">
                <div class="recent-activity-card">
                    <div class="activity-header">
                        <h5 class="activity-title">
                            <i class="bi bi-clock-history text-primary"></i>
                            Recent Maintenance Activities
                        </h5>
                    </div>
                    <div class="activity-body">
                        @if (Model.RecentMaintenanceLogs?.Any() == true)
                        {
                            @foreach (var log in Model.RecentMaintenanceLogs)
                            {
                                <div class="activity-item">
                                    <div class="activity-info">
                                        <div class="activity-icon">
                                            <i class="bi bi-wrench"></i>
                                        </div>
                                        <div class="activity-details">
                                            <h6>@(log.Equipment?.EquipmentModel?.ModelName ?? "Unknown Equipment")</h6>
                                            <small>@log.MaintenanceType - @log.Description</small>
                                        </div>
                                    </div>
                                    <div class="activity-date">
                                        @log.LogDate.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-inbox display-4 text-muted mb-2"></i>
                                <p class="text-muted">No recent maintenance activities</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Top Priority Alerts -->
            <div class="col-xl-6">
                <div class="recent-activity-card">
                    <div class="activity-header">
                        <h5 class="activity-title">
                            <i class="bi bi-exclamation-triangle text-warning"></i>
                            High Priority Alerts
                        </h5>
                    </div>
                    <div class="activity-body">
                        @if (Model.TopAlerts?.Any() == true)
                        {
                            @foreach (var alert in Model.TopAlerts)
                            {
                                <div class="activity-item">
                                    <div class="activity-info">
                                        <div class="activity-icon" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                                            <i class="bi bi-exclamation-triangle"></i>
                                        </div>
                                        <div class="activity-details">
                                            <h6>@(alert.Equipment?.EquipmentModel?.ModelName ?? "Unknown Equipment")</h6>
                                            <small>@alert.Description</small>
                                        </div>
                                    </div>
                                    <div class="activity-date">
                                        @alert.CreatedDate.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-check-circle display-4 text-success mb-2"></i>
                                <p class="text-muted">No high priority alerts</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
