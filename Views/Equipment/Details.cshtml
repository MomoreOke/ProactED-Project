@using FEENALOoFINALE.Models
@model FEENALOoFINALE.Models.Equipment

@{
    ViewData["Title"] = "Equipment Details";
}

<h1>Equipment Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@(Model.EquipmentType?.EquipmentTypeName ?? "N/A") - @(Model.EquipmentModel?.ModelName ?? "N/A")</h5>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Equipment Type</dt>
                    <dd class="col-sm-8">@(Model.EquipmentType?.EquipmentTypeName ?? "N/A")</dd>

                    <dt class="col-sm-4">Equipment Model</dt>
                    <dd class="col-sm-8">@(Model.EquipmentModel?.ModelName ?? "N/A")</dd>

                    <dt class="col-sm-4">Building</dt>
                    <dd class="col-sm-8">@(Model.Building?.BuildingName ?? "N/A")</dd>

                    <dt class="col-sm-4">Room</dt>
                    <dd class="col-sm-8">@(Model.Room?.RoomName ?? "N/A")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InstallationDate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.InstallationDate)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ExpectedLifespanMonths)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpectedLifespanMonths) months</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <div class="btn-group me-2" role="group">
        <a asp-action="Edit" asp-route-id="@Model.EquipmentId" class="btn btn-warning">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="MaintenanceHistory" asp-route-id="@Model.EquipmentId" class="btn btn-info">
            <i class="bi bi-clock-history me-1"></i>Maintenance History
        </a>
    </div>
    <div class="btn-group me-2" role="group">
        <a asp-action="Documents" asp-route-id="@Model.EquipmentId" class="btn btn-outline-primary">
            <i class="bi bi-files me-1"></i>Documents
        </a>
        <a asp-action="MaintenanceRecommendations" asp-route-id="@Model.EquipmentId" class="btn btn-outline-success">
            <i class="bi bi-lightbulb me-1"></i>Recommendations
        </a>
    </div>
    <div class="btn-group me-2" role="group">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
            <i class="bi bi-trash me-1"></i>Delete Equipment
        </button>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>
                <p>Are you sure you want to delete this equipment?</p>
                <div class="card bg-light">
                    <div class="card-body">
                        <h6><i class="bi bi-gear me-1"></i> @(Model.EquipmentType?.EquipmentTypeName ?? "N/A") - @(Model.EquipmentModel?.ModelName ?? "N/A")</h6>
                        <p class="mb-1"><i class="bi bi-geo-alt me-1"></i> @(Model.Building?.BuildingName ?? "N/A") - @(Model.Room?.RoomName ?? "N/A")</p>
                        <p class="mb-0"><small class="text-muted">Equipment ID: @Model.EquipmentId</small></p>
                    </div>
                </div>
                <p class="mt-3 mb-0">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        This will also delete all associated maintenance logs, predictions, and alerts.
                    </small>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <form asp-action="Delete" asp-route-id="@Model.EquipmentId" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Equipment
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>