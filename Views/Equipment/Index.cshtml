@using FEENALOoFINALE.Models
@model IEnumerable<FEENALOoFINALE.Models.Equipment>

@{
    ViewData["Title"] = "Equipment Management";
    var breadcrumbs = new List<(string Text, string? Controller, string? Action, object? RouteValues)>
    {
        ("Dashboard", "Dashboard", "Index", null),
        ("Equipment Management", null, null, null)
    };
}

@await Html.PartialAsync("_Breadcrumb", breadcrumbs)

@* Model Interpretability Notice *@
@if (Context.Request.Query.ContainsKey("modelInterpretability"))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">ðŸ§  Model Interpretability Integration</h4>
        <p><strong>Model Interpretability is now integrated with Equipment Management!</strong></p>
        <hr>
        <p class="mb-0">
            Look for the <span class="badge badge-info">ðŸ§  AI Analysis</span> button next to equipment that has predictive data available.
            This connects to the 5000+ equipment dataset and predictive model in the "Predictive Model" folder.
        </p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (ViewBag.FilterMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-filter"></i> @ViewBag.FilterMessage
        <a asp-action="Index" class="btn btn-outline-primary btn-sm ms-3">
            <i class="fas fa-times"></i> Clear Filter
        </a>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 mb-2">Equipment Management</h1>
        <p class="text-muted">Manage and monitor all equipment in your facility</p>
    </div>
    <div>
        <div class="btn-group me-2" role="group">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Equipment
            </a>
            <button type="button" class="btn btn-primary btn-lg dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a asp-action="Create" class="dropdown-item"><i class="bi bi-gear me-2"></i>Standard Equipment</a></li>
                <li><a asp-action="CreateWithDocs" class="dropdown-item"><i class="bi bi-file-earmark-pdf me-2"></i>Equipment with Documents</a></li>
            </ul>
        </div>
        <a asp-action="CheckMaintenanceOverdue" class="btn btn-warning btn-lg">
            <i class="bi bi-exclamation-triangle me-2"></i>Check Maintenance
        </a>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-funnel me-2"></i>Filters
        </h5>
    </div>
    <div class="card-body">
        <form id="filterForm" method="get">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="searchTerm" class="form-label">Search Equipment</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@ViewBag.SearchTerm" placeholder="Search by model name...">
                </div>
                <div class="col-md-3">
                    <label for="buildingFilter" class="form-label">Building</label>
                    <select class="form-select" id="buildingFilter" name="buildingId">
                        <option value="">All Buildings</option>
                        @foreach (var building in ViewBag.Buildings as List<FEENALOoFINALE.Models.Building> ?? new List<FEENALOoFINALE.Models.Building>())
                        {
                            <option value="@building.BuildingId" selected="@(ViewBag.SelectedBuildingId?.ToString() == building.BuildingId.ToString())">
                                @building.BuildingName
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="roomFilter" class="form-label">Room</label>
                    <select class="form-select" id="roomFilter" name="roomId">
                        <option value="">All Rooms</option>
                        @foreach (var room in ViewBag.Rooms as List<FEENALOoFINALE.Models.Room> ?? new List<FEENALOoFINALE.Models.Room>())
                        {
                            <option value="@room.RoomId" selected="@(ViewBag.SelectedRoomId?.ToString() == room.RoomId.ToString())">
                                @room.RoomName (@(room.Building?.BuildingName ?? "Unknown Building"))
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Status</label>
                    <select class="form-select" id="statusFilter" name="status">
                        <option value="">All Status</option>
                        <option value="Active" selected="@(ViewBag.SelectedStatus == "Active")">Active</option>
                        <option value="Inactive" selected="@(ViewBag.SelectedStatus == "Inactive")">Inactive</option>
                        <option value="Retired" selected="@(ViewBag.SelectedStatus == "Retired")">Retired</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Apply Filters
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-gear me-2 text-primary"></i>All Equipment
            </h5>
            <span class="badge bg-primary rounded-pill">@Model.Count() Total</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-modern mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@(Model.Any() && Model.First().EquipmentType != null ? Html.DisplayNameFor(model => model.First().EquipmentType!.EquipmentTypeName) : "Equipment Type")</th>
                            <th>@(Model.Any() && Model.First().EquipmentModel != null ? Html.DisplayNameFor(model => model.First().EquipmentModel!.ModelName) : "Model")</th> 
                            <th>Location</th>
                            <th>@(Model.Any() ? Html.DisplayNameFor(model => model.First().Status) : "Status")</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Status == EquipmentStatus.Inactive ? "table-warning" : item.Status == EquipmentStatus.Retired ? "table-danger" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-gear me-2 text-muted"></i>
                                        <strong>@(item.EquipmentType?.EquipmentTypeName ?? "N/A")</strong>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@(item.EquipmentModel?.ModelName ?? "N/A")</strong>
                                        <br>
                                        <small class="text-muted">ID: @item.EquipmentId</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <i class="bi bi-geo-alt me-1 text-muted"></i>
                                        @(item.Building?.BuildingName ?? "N/A")
                                        <br>
                                        <small class="text-muted">@(item.Room?.RoomName ?? "N/A")</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(item.Status == EquipmentStatus.Active ? "bg-success" : item.Status == EquipmentStatus.Inactive ? "bg-warning" : "bg-secondary")">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.EquipmentId" class="btn btn-outline-primary btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-outline-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="MaintenanceHistory" asp-route-id="@item.EquipmentId" class="btn btn-outline-info btn-sm" title="Maintenance History">
                                            <i class="bi bi-clipboard-data"></i>
                                        </a>
                                        <a asp-controller="MaintenanceLog" asp-action="Create" asp-route-equipmentId="@item.EquipmentId" class="btn btn-outline-success btn-sm" title="Schedule Maintenance">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                        @* Model Interpretability Integration *@
                                        <button class="btn btn-outline-info btn-sm" onclick="analyzeEquipment(@item.EquipmentId)" title="AI Model Analysis - Predictive Model Integration">
                                            <i class="bi bi-brain"></i>
                                        </button>
                                        <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-gear display-1 text-muted mb-3"></i>
                <h4>No Equipment Found</h4>
                <p class="text-muted">Start by adding your first piece of equipment to the system.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add First Equipment
                </a>
            </div>
        }
    </div>
</div>

<style>
    .table-modern {
        border: none;
    }
    
    .table-modern thead th {
        border: none;
        font-weight: 600;
        color: #495057;
        background-color: #f8f9fa;
    }
    
    .table-modern tbody tr {
        border: none;
        transition: all 0.2s ease;
    }
    
    .table-modern tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05);
        transform: translateY(-1px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }
    
    .table-modern tbody td {
        border: none;
        border-bottom: 1px solid #f1f3f4;
        vertical-align: middle;
        padding: 1rem 0.75rem;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
    
    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle building change to filter rooms
            $('#buildingFilter').change(function() {
                var buildingId = $(this).val();
                var roomFilter = $('#roomFilter');
                
                // Clear current room options
                roomFilter.empty();
                roomFilter.append('<option value="">All Rooms</option>');
                
                if (buildingId) {
                    // Get rooms for selected building
                    $.ajax({
                        url: '@Url.Action("GetRoomsByBuilding", "Equipment")',
                        data: { buildingId: buildingId },
                        type: 'GET',
                        success: function(rooms) {
                            $.each(rooms, function(index, room) {
                                roomFilter.append('<option value="' + room.roomId + '">' + room.roomName + '</option>');
                            });
                        },
                        error: function() {
                            console.log('Error loading rooms for building');
                        }
                    });
                }
            });
            
            // Auto-submit form when filters change (optional)
            $('#buildingFilter, #roomFilter, #statusFilter').change(function() {
                // Uncomment the line below to auto-submit the form when filters change
                // $('#filterForm').submit();
            });
        });
        
        // Model Interpretability Analysis Function
        function analyzeEquipment(equipmentId) {
            // Show loading modal
            const modal = `
                <div class="modal fade" id="analysisModal" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-info text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-brain"></i> AI Model Interpretability Analysis
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div id="analysisContent">
                                    <div class="text-center py-4">
                                        <div class="spinner-border text-info" role="status">
                                            <span class="visually-hidden">Analyzing...</span>
                                        </div>
                                        <p class="mt-3">Analyzing equipment with AI predictive model...</p>
                                        <small class="text-muted">Connecting to Predictive Model folder dataset</small>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a href="/ModelInterpretability/EquipmentAnalysis/${equipmentId}" class="btn btn-info" target="_blank">
                                    Open Full Analysis
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remove existing modal if any
            $('#analysisModal').remove();
            
            // Add modal to page
            $('body').append(modal);
            
            // Show modal
            $('#analysisModal').modal('show');
            
            // Call the Equipment controller's GetEquipmentExplanation API
            $.ajax({
                url: `/Equipment/GetEquipmentExplanation/${equipmentId}`,
                type: 'POST',
                success: function(data) {
                    if (data.isSuccessful) {
                        displayAnalysisResults(data);
                    } else {
                        showAnalysisError(data.errorMessage || 'Analysis failed');
                    }
                },
                error: function(xhr, status, error) {
                    showAnalysisError('Unable to connect to AI model. Please ensure the Predictive Model service is running.');
                }
            });
        }
        
        function displayAnalysisResults(data) {
            const html = `
                <div class="alert alert-success">
                    <h6><i class="bi bi-check-circle"></i> Analysis Complete</h6>
                    <p class="mb-0">Equipment analyzed using 5000+ dataset from Predictive Model folder</p>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="card border-primary">
                            <div class="card-header">Risk Assessment</div>
                            <div class="card-body">
                                <h5>Equipment: ${data.equipmentName || 'Equipment #' + data.equipmentId}</h5>
                                <p><strong>Failure Probability:</strong> <span class="badge bg-${getRiskBadgeClass(data.failureProbability)}">${(data.failureProbability * 100).toFixed(1)}%</span></p>
                                <p><strong>Risk Level:</strong> <span class="badge bg-${getRiskLevelBadgeClass(data.riskLevel)}">${data.riskLevel}</span></p>
                                <p><strong>Recommendation:</strong></p>
                                <p class="text-muted">${data.recommendation}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header">Key Factors</div>
                            <div class="card-body">
                                ${displayTopFactors(data.shapValues)}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="card border-success">
                        <div class="card-header">Business Interpretation</div>
                        <div class="card-body">
                            ${displayBusinessInterpretation(data.businessInterpretation)}
                        </div>
                    </div>
                </div>
            `;
            
            $('#analysisContent').html(html);
        }
        
        function showAnalysisError(message) {
            const html = `
                <div class="alert alert-warning">
                    <h6><i class="bi bi-exclamation-triangle"></i> Analysis Unavailable</h6>
                    <p>${message}</p>
                    <hr>
                    <p class="mb-0"><strong>Note:</strong> Model Interpretability requires the Predictive Model service to be running. 
                    The AI analysis connects to the 5000+ equipment dataset in the "Predictive Model" folder.</p>
                </div>
            `;
            
            $('#analysisContent').html(html);
        }
        
        function displayTopFactors(shapValues) {
            if (!shapValues || shapValues.length === 0) {
                return '<p class="text-muted">No feature importance data available.</p>';
            }
            
            let html = '<ul class="list-group list-group-flush">';
            shapValues.slice(0, 5).forEach(function(factor) {
                const impact = factor.value > 0 ? 'Increases Risk' : 'Decreases Risk';
                const badgeClass = factor.value > 0 ? 'bg-danger' : 'bg-success';
                html += `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${factor.feature}</strong><br>
                            <small class="text-muted">${impact}</small>
                        </div>
                        <span class="badge ${badgeClass}">${factor.value > 0 ? '+' : ''}${factor.value.toFixed(3)}</span>
                    </li>
                `;
            });
            html += '</ul>';
            return html;
        }
        
        function displayBusinessInterpretation(interpretation) {
            if (!interpretation) {
                return '<p class="text-muted">Business interpretation not available.</p>';
            }
            
            let html = '';
            if (interpretation.primaryConcerns && interpretation.primaryConcerns.length > 0) {
                html += '<h6>Primary Concerns:</h6><ul>';
                interpretation.primaryConcerns.forEach(function(concern) {
                    html += `<li>${concern}</li>`;
                });
                html += '</ul>';
            }
            
            if (interpretation.recommendations && interpretation.recommendations.length > 0) {
                html += '<h6>Recommended Actions:</h6><ul>';
                interpretation.recommendations.forEach(function(rec) {
                    html += `<li>${rec}</li>`;
                });
                html += '</ul>';
            }
            
            return html || '<p class="text-muted">Business interpretation not available.</p>';
        }
        
        function getRiskBadgeClass(probability) {
            if (probability >= 0.7) return 'danger';
            if (probability >= 0.4) return 'warning';
            return 'success';
        }
        
        function getRiskLevelBadgeClass(riskLevel) {
            switch(riskLevel?.toLowerCase()) {
                case 'high': return 'danger';
                case 'medium': return 'warning';
                case 'low': return 'success';
                default: return 'secondary';
            }
        }
    </script>
}