@model FEENALOoFINALE.Services.EnhancedPredictionResult
@{
    ViewData["Title"] = "Enhanced AI Prediction with Maintenance Scheduling";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">
                                <i class="fas fa-brain me-2"></i>
                                Enhanced AI Prediction Report
                            </div>
                        <div class="text-end">
                            <small>Generated: @Model.PredictionTimestamp.ToString("MMM dd, yyyy HH:mm")</small>
                            <br><small>Model: @Model.ModelVersion</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary">Equipment Information</h5>
                            <p><strong>Equipment:</strong> @Model.EquipmentName</p>
                            <p><strong>Location:</strong> @Model.Location</p>
                            <p><strong>Equipment ID:</strong> #@Model.EquipmentId</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Prediction Summary</h5>
                            <p>
                                <strong>Risk Level:</strong> 
                                <span class="badge bg-@Model.RiskLevelClass fs-6">@Model.RiskLevel</span>
                            </p>
                            <p><strong>Failure Probability:</strong> @Model.FailureProbabilityDisplay</p>
                            <p><strong>Confidence Score:</strong> @Model.ConfidenceDisplay</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Risk Assessment Card -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Risk Assessment
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="progress mb-2" style="height: 30px;">
                            <div class="progress-bar bg-@Model.RiskLevelClass" 
                                 role="progressbar" 
                                 style="width: @((Model.FailureProbability * 100).ToString("F0"))%"
                                 aria-valuenow="@((Model.FailureProbability * 100).ToString("F0"))" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                @Model.FailureProbabilityDisplay
                            </div>
                        </div>
                        <h4 class="text-@Model.RiskLevelClass">@Model.RiskLevel Risk</h4>
                    </div>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border p-2 rounded">
                                <h6 class="text-muted mb-0">Confidence</h6>
                                <h5 class="text-primary">@Model.ConfidenceDisplay</h5>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border p-2 rounded">
                                <h6 class="text-muted mb-0">Model Accuracy</h6>
                                <h5 class="text-success">91%</h5>
                            </div>
                        </div>
                    </div>

                    @if (Model.MaintenanceScheduled)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Maintenance Automatically Scheduled!</strong><br>
                            Task scheduled for: <strong>@Model.ScheduledMaintenanceTask.ScheduledDate.ToString("MMM dd, yyyy")</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Failure Cause Analysis Card -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>
                        Potential Failure Causes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PotentialFailureCauses.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var cause in Model.PotentialFailureCauses)
                            {
                                <li class="mb-2">
                                    <i class="fas fa-arrow-right text-info me-2"></i>
                                    @cause
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            No specific failure causes identified. Equipment appears to be operating within normal parameters.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Maintenance Recommendation Card -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-wrench me-2"></i>
                        Maintenance Recommendation
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6 class="text-success">Recommended Action</h6>
                            <p><strong>Type:</strong> @Model.MaintenanceRecommendation.MaintenanceType</p>
                            <p>
                                <strong>Priority:</strong> 
                                <span class="badge bg-@Model.MaintenanceRecommendation.PriorityClass">
                                    @Model.MaintenanceRecommendation.PriorityDisplay
                                </span>
                            </p>
                            <p><strong>Urgency:</strong> @Model.MaintenanceRecommendation.UrgencyDisplay</p>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-success">Timeline</h6>
                            <p><strong>Recommended Date:</strong> @Model.MaintenanceRecommendation.RecommendedDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Days Until Maintenance:</strong> @Model.MaintenanceRecommendation.DaysUntilRecommended</p>
                            <p><strong>Estimated Failure:</strong> @Model.MaintenanceRecommendation.EstimatedFailureDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-success">Safety Buffer</h6>
                            <div class="alert alert-light">
                                <small>@Model.MaintenanceRecommendation.MaintenanceBufferInfo</small>
                            </div>
                            @if (Model.MaintenanceRecommendation.PreventiveAction)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-shield-alt me-1"></i>Preventive Action
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6 class="text-success">Maintenance Description</h6>
                            <div class="alert alert-light">
                                @Model.MaintenanceRecommendation.Description
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scheduled Maintenance Task Details -->
    @if (Model.ScheduledMaintenanceTask != null)
    {
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-check me-2"></i>
                            Scheduled Maintenance Task
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Task ID:</strong> #@Model.ScheduledMaintenanceTask.TaskId</p>
                                <p><strong>Scheduled Date:</strong> @Model.ScheduledMaintenanceTask.ScheduledDate.ToString("MMM dd, yyyy HH:mm")</p>
                                <p><strong>Priority:</strong> <span class="badge bg-@(Model.ScheduledMaintenanceTask.Priority switch 
                                    { 
                                        FEENALOoFINALE.Models.TaskPriority.Critical => "danger", 
                                        FEENALOoFINALE.Models.TaskPriority.High => "warning", 
                                        FEENALOoFINALE.Models.TaskPriority.Medium => "info", 
                                        _ => "success" 
                                    })">@Model.ScheduledMaintenanceTask.Priority</span></p>
                                <p><strong>Status:</strong> <span class="badge bg-secondary">@Model.ScheduledMaintenanceTask.Status</span></p>
                            </div>
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.ScheduledMaintenanceTask.AssignedToUserId))
                                {
                                    <p><strong>Assigned To:</strong> @Model.ScheduledMaintenanceTask.AssignedToUserId</p>
                                }
                                else
                                {
                                    <p><strong>Status:</strong> <span class="text-muted">Auto-assigned to available technician</span></p>
                                }
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <h6>Task Description</h6>
                            <div class="alert alert-light">
                                @Html.Raw(Model.ScheduledMaintenanceTask.Description.Replace("\n", "<br>"))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <div>
                    <a href="@Url.Action("Index", "Equipment")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Equipment
                    </a>
                    <a href="@Url.Action("MaintenanceDashboard")" class="btn btn-outline-primary ms-2">
                        <i class="fas fa-tachometer-alt me-2"></i>Maintenance Dashboard
                    </a>
                </div>
                <div>
                    @if (!Model.MaintenanceScheduled && (Model.RiskLevel == "Critical" || Model.RiskLevel == "High"))
                    {
                        <button class="btn btn-warning" onclick="scheduleMaintenanceManually(@Model.EquipmentId)">
                            <i class="fas fa-calendar-plus me-2"></i>Schedule Maintenance
                        </button>
                    }
                    <button class="btn btn-primary ms-2" onclick="refreshPrediction(@Model.EquipmentId)">
                        <i class="fas fa-sync me-2"></i>Refresh Prediction
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function refreshPrediction(equipmentId) {
        // Show loading indicator
        const refreshBtn = document.querySelector('button[onclick*="refreshPrediction"]');
        const originalText = refreshBtn.innerHTML;
        refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Refreshing...';
        refreshBtn.disabled = true;

        // Reload the page to get fresh prediction
        setTimeout(() => {
            window.location.href = '@Url.Action("EnhancedPrediction")?equipmentId=' + equipmentId;
        }, 1000);
    }

    function scheduleMaintenanceManually(equipmentId) {
        if (confirm('Are you sure you want to manually schedule maintenance for this equipment?')) {
            // In a real implementation, this would call an API to schedule maintenance
            alert('Maintenance scheduling functionality would be implemented here.');
        }
    }

    // Auto-refresh every 5 minutes for critical equipment
    @if (Model.RiskLevel == "Critical")
    {
        <text>
        setTimeout(() => {
            refreshPrediction(@Model.EquipmentId);
        }, 300000); // 5 minutes
        </text>
    }
</script>
