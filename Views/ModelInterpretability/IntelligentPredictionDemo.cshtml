<!-- Loading Modal -->
<div class="modal fade" id="demoLoadingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h6 class="modal-title">
                    <i class="fas fa-brain me-2 text-primary"></i>
                    AI Analysis in Progress
                </h6>
            </div>
            <div class="modal-body text-center">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h6 id="analysisStep">Initializing AI model...</h6>
                <div class="progress mt-3">
                    <div id="analysisProgress" class="progress-bar progress-bar-striped progress-bar-animated" 
                         role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="text-muted mt-2 mb-0">
                    <small id="analysisDescription">Collecting equipment data and sensor readings...</small>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    function runEnhancedPrediction(equipmentId, equipmentType) {
        // Show loading modal with realistic progress steps
        $('#demoLoadingModal').modal('show');
        
        const steps = [
            { step: "Collecting equipment data...", description: "Gathering " + equipmentType + " specifications and history", progress: 20 },
            { step: "Analyzing sensor readings...", description: "Processing temperature, vibration, and power data", progress: 40 },
            { step: "Running AI prediction model...", description: "Random Forest analysis with 91% accuracy", progress: 60 },
            { step: "Identifying failure causes...", description: "Analyzing equipment-specific risk factors", progress: 80 },
            { step: "Generating maintenance plan...", description: "Optimizing scheduling and technician assignment", progress: 100 }
        ];

        let currentStep = 0;

        function updateProgress() {
            if (currentStep < steps.length) {
                const step = steps[currentStep];
                document.getElementById('analysisStep').textContent = step.step;
                document.getElementById('analysisDescription').textContent = step.description;
                document.getElementById('analysisProgress').style.width = step.progress + '%';
                document.getElementById('analysisProgress').setAttribute('aria-valuenow', step.progress);
                
                currentStep++;
                setTimeout(updateProgress, 1500);
            } else {
                // Analysis complete - redirect to results
                setTimeout(() => {
                    $('#demoLoadingModal').modal('hide');
                    window.location.href = '@Url.Action("EnhancedPrediction")?equipmentId=' + equipmentId;
                }, 500);
            }
        }

        // Start the progress simulation
        setTimeout(updateProgress, 1000);
    }

    function runFullDemo() {
        if (confirm('This will run the complete AI analysis system on all available equipment. This process may take several minutes. Continue?')) {
            // Show loading modal
            $('#demoLoadingModal').modal('show');
            document.getElementById('analysisStep').textContent = 'Running Full System Demo...';
            document.getElementById('analysisDescription').textContent = 'Analyzing all equipment with AI predictions and maintenance scheduling';
            document.getElementById('analysisProgress').style.width = '100%';
            
            // Redirect to dashboard after delay
            setTimeout(() => {
                $('#demoLoadingModal').modal('hide');
                window.location.href = '@Url.Action("MaintenanceDashboard")';
            }, 4000);
        }
    }

    // Add some interactive demonstrations
    document.addEventListener('DOMContentLoaded', function() {
        // Highlight features on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate__fadeInUp');
                }
            });
        });

        document.querySelectorAll('.card').forEach(card => {
            observer.observe(card);
        });
    });
</script>

<style>
    .animate__fadeInUp {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
    }
</style>
