@model FEENALOoFINALE.Models.ViewModels.AnalyticsDashboardViewModel
@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="bi bi-graph-up text-primary me-2"></i>
                @Model.PageTitle
            </h1>
            <p class="text-muted">Comprehensive analytics and trends for maintenance operations</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded p-3">
                                <i class="bi bi-speedometer2 fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1">Overall Efficiency</h6>
                            <h4 class="text-primary mb-0">@Model.EfficiencyMetrics.OverallEfficiency.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success text-white rounded p-3">
                                <i class="bi bi-cash-stack fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1">Total Cost</h6>
                            <h4 class="text-success mb-0">$@Model.CostAnalysis.TotalMaintenanceCost.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info text-white rounded p-3">
                                <i class="bi bi-tools fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1">Utilization Rate</h6>
                            <h4 class="text-info mb-0">@Model.EfficiencyMetrics.EquipmentUtilizationRate.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning text-white rounded p-3">
                                <i class="bi bi-shield-check fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1">Reliability</h6>
                            <h4 class="text-warning mb-0">@Model.EfficiencyMetrics.SystemReliability.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart text-primary me-2"></i>
                        Equipment Trends
                    </h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="equipmentTrendsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-wrench text-success me-2"></i>
                        Maintenance Trends
                    </h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="maintenanceTrendsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cost Analysis -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pie-chart text-info me-2"></i>
                        Cost Breakdown
                    </h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="costBreakdownChart"></canvas>
                    </div>
                    <div class="mt-3">
                        <div class="row text-center">
                            <div class="col-6">
                                <h6>Preventive</h6>
                                <span class="text-success">$@Model.CostAnalysis.PreventiveCost.ToString("N0")</span>
                            </div>
                            <div class="col-6">
                                <h6>Reactive</h6>
                                <span class="text-danger">$@Model.CostAnalysis.ReactiveCost.ToString("N0")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bell text-warning me-2"></i>
                        Alert Trends
                    </h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="alertTrendsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-download me-2"></i>
                        Export Options
                    </h5>
                    <div class="btn-group">
                        <button class="btn btn-outline-primary" onclick="exportChart('equipmentTrendsChart', 'equipment-trends')">
                            <i class="bi bi-file-earmark-excel me-1"></i>Export Equipment Data
                        </button>
                        <button class="btn btn-outline-success" onclick="exportChart('maintenanceTrendsChart', 'maintenance-trends')">
                            <i class="bi bi-file-earmark-pdf me-1"></i>Export Maintenance Data
                        </button>
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Equipment Trends Chart
        const equipmentCtx = document.getElementById('equipmentTrendsChart').getContext('2d');
        const equipmentChart = new Chart(equipmentCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EquipmentTrends.Select(t => t.Date.ToString("MMM dd")))),
                datasets: [{
                    label: 'Equipment Added',
                    data: @Html.Raw(Json.Serialize(Model.EquipmentTrends.Select(t => t.Value))),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Maintenance Trends Chart
        const maintenanceCtx = document.getElementById('maintenanceTrendsChart').getContext('2d');
        const maintenanceChart = new Chart(maintenanceCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MaintenanceTrends.Select(t => t.Date.ToString("MMM dd")))),
                datasets: [{
                    label: 'Maintenance Tasks',
                    data: @Html.Raw(Json.Serialize(Model.MaintenanceTrends.Select(t => t.Value))),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Cost Breakdown Chart
        const costCtx = document.getElementById('costBreakdownChart').getContext('2d');
        const costChart = new Chart(costCtx, {
            type: 'doughnut',
            data: {
                labels: ['Preventive', 'Reactive'],
                datasets: [{
                    data: [@Model.CostAnalysis.PreventiveCost, @Model.CostAnalysis.ReactiveCost],
                    backgroundColor: ['#28a745', '#dc3545'],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Alert Trends Chart
        const alertCtx = document.getElementById('alertTrendsChart').getContext('2d');
        const alertChart = new Chart(alertCtx, {
            type: 'area',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.AlertTrends.Select(t => t.Date.ToString("MMM dd")))),
                datasets: [{
                    label: 'Alerts Generated',
                    data: @Html.Raw(Json.Serialize(Model.AlertTrends.Select(t => t.Value))),
                    backgroundColor: 'rgba(255, 193, 7, 0.3)',
                    borderColor: 'rgba(255, 193, 7, 1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        function exportChart(chartId, filename) {
            // Mock export function
            alert('Export functionality would be implemented here for ' + filename);
        }
    </script>
}
