@model FEENALOoFINALE.ViewModels.ScheduleViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-calendar-check me-2"></i>@Model.PageTitle
                    </h1>
                    <p class="text-muted mb-0">@Model.PageDescription</p>
                </div>
                <div class="btn-group">
                    <a asp-action="Calendar" class="btn btn-outline-primary">
                        <i class="bi bi-calendar me-1"></i>Calendar View
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                        <i class="bi bi-plus-circle me-1"></i>Schedule Maintenance
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <i class="bi bi-clock-history text-primary" style="font-size: 2rem;"></i>
                        <span class="badge bg-primary fs-6">@Model.Statistics.TotalUpcoming</span>
                    </div>
                    <h5 class="card-title text-primary mb-1">Upcoming Tasks</h5>
                    <small class="text-muted">Next 30 days</small>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-danger h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 2rem;"></i>
                        <span class="badge bg-danger fs-6">@Model.Statistics.TotalOverdue</span>
                    </div>
                    <h5 class="card-title text-danger mb-1">Overdue Tasks</h5>
                    <small class="text-muted">Require immediate attention</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <i class="bi bi-gear text-warning" style="font-size: 2rem;"></i>
                        <span class="badge bg-warning fs-6">@Model.Statistics.TotalInProgress</span>
                    </div>
                    <h5 class="card-title text-warning mb-1">In Progress</h5>
                    <small class="text-muted">Currently being worked on</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        <span class="badge bg-success fs-6">@Model.Statistics.TotalCompletedThisWeek</span>
                    </div>
                    <h5 class="card-title text-success mb-1">Completed</h5>
                    <small class="text-muted">This week</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Priority Distribution and Health Status -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart me-2"></i>Priority Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="mb-2">
                                <span class="badge bg-danger fs-6">@Model.Statistics.HighPriorityCount</span>
                            </div>
                            <small class="text-muted">High Priority</small>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="mb-2">
                                <span class="badge bg-warning fs-6">@Model.Statistics.MediumPriorityCount</span>
                            </div>
                            <small class="text-muted">Medium Priority</small>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="mb-2">
                                <span class="badge bg-secondary fs-6">@Model.Statistics.LowPriorityCount</span>
                            </div>
                            <small class="text-muted">Low Priority</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-heart-pulse me-2"></i>Schedule Health
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span class="badge bg-@Model.Statistics.HealthStatusColor fs-5">@Model.Statistics.OverallHealthStatus</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Completion Rate</small>
                    </div>
                    <h4 class="text-@Model.Statistics.HealthStatusColor">@Model.Statistics.CompletionRate%</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-3 mb-2">
                            <form asp-action="GenerateRoutineSchedule" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-arrow-repeat me-2"></i>Generate Routine Schedule
                                </button>
                            </form>
                        </div>
                        <div class="col-md-6 col-lg-3 mb-2">
                            <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                                <i class="bi bi-plus-circle me-2"></i>Create Custom Task
                            </button>
                        </div>
                        <div class="col-md-6 col-lg-3 mb-2">
                            <a asp-action="Calendar" class="btn btn-outline-info w-100">
                                <i class="bi bi-calendar me-2"></i>View Calendar
                            </a>
                        </div>
                        <div class="col-md-6 col-lg-3 mb-2">
                            <a asp-controller="MaintenanceLog" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-journal-text me-2"></i>View Maintenance Logs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Task Sections -->
    <div class="row">
        <!-- Overdue Tasks -->
        @if (Model.OverdueTasks.Any())
        {
            <div class="col-12 mb-4">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>Overdue Tasks (@Model.OverdueTasks.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @await Html.PartialAsync("_MaintenanceTaskTable", Model.OverdueTasks)
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- In Progress Tasks -->
        @if (Model.InProgressTasks.Any())
        {
            <div class="col-12 mb-4">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-gear me-2"></i>In Progress Tasks (@Model.InProgressTasks.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @await Html.PartialAsync("_MaintenanceTaskTable", Model.InProgressTasks)
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Upcoming Tasks -->
        @if (Model.UpcomingTasks.Any())
        {
            <div class="col-12 mb-4">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-clock me-2"></i>Upcoming Tasks (@Model.UpcomingTasks.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @await Html.PartialAsync("_MaintenanceTaskTable", Model.UpcomingTasks)
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Recently Completed -->
        @if (Model.RecentlyCompleted.Any())
        {
            <div class="col-12 mb-4">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-check-circle me-2"></i>Recently Completed (@Model.RecentlyCompleted.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @await Html.PartialAsync("_MaintenanceTaskTable", Model.RecentlyCompleted)
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Empty State -->
        @if (!Model.UpcomingTasks.Any() && !Model.OverdueTasks.Any() && !Model.InProgressTasks.Any() && !Model.RecentlyCompleted.Any())
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                        <h4>No Maintenance Tasks Found</h4>
                        <p class="text-muted">There are currently no scheduled maintenance tasks. Start by generating a routine schedule or creating a custom task.</p>
                        <div class="mt-4">
                            <form asp-action="GenerateRoutineSchedule" method="post" class="d-inline me-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-arrow-repeat me-2"></i>Generate Routine Schedule
                                </button>
                            </form>
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                                <i class="bi bi-plus-circle me-2"></i>Create Custom Task
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Task Modal -->
<div class="modal fade" id="createTaskModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>Create Maintenance Task
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateTask" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Equipment <span class="text-danger">*</span></label>
                        <select name="EquipmentId" class="form-select" required>
                            <option value="">Select Equipment</option>
                            <!-- This would be populated via AJAX or server-side -->
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea name="Description" class="form-control" rows="3" placeholder="Enter maintenance task description" required></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Priority</label>
                            <select name="Priority" class="form-select">
                                <option value="Low">Low</option>
                                <option value="Medium" selected>Medium</option>
                                <option value="High">High</option>
                                <option value="Critical">Critical</option>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Scheduled Date</label>
                            <input type="datetime-local" name="ScheduledDate" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Assigned To</label>
                        <select name="AssignedToUserId" class="form-select">
                            <option value="">Auto-assign</option>
                            <!-- This would be populated with available technicians -->
                        </select>
                        <div class="form-text">Leave empty for automatic assignment</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check me-2"></i>Create Task
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Load equipment options for modal
            $('#createTaskModal').on('show.bs.modal', function() {
                loadEquipmentOptions();
                loadTechnicianOptions();
            });

            function loadEquipmentOptions() {
                // This would make an AJAX call to load equipment
                // For now, keeping it simple
            }

            function loadTechnicianOptions() {
                // This would make an AJAX call to load technicians
                // For now, keeping it simple
            }
        });
    </script>
}

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.15s ease-in-out;
    }

    .badge.fs-6 {
        font-size: 1rem !important;
    }

    .badge.fs-5 {
        font-size: 1.25rem !important;
    }

    .btn-group .btn {
        white-space: nowrap;
    }

    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }
</style>
