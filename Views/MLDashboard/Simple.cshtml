@model FEENALOoFINALE.ViewModels.MLDashboardViewModel
@{
    ViewData["Title"] = "ML Dashboard - Simple";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>ML Prediction Dashboard</h1>
    
    @if (Model != null)
    {
        <div class="alert alert-success">
            <h3>✅ Dashboard Data Loaded</h3>
            
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Equipment</h5>
                            <h2 class="text-primary">@Model.TotalEquipmentAnalyzed</h2>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">High Risk Equipment</h5>
                            <h2 class="text-danger">@(Model.HighRiskEquipmentList?.Count ?? 0)</h2>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Recent Predictions</h5>
                            <h2 class="text-info">@(Model.RecentPredictions?.Count ?? 0)</h2>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Model Status</h5>
                            <h2 class="text-success">@Model.ModelStatus</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            @if (Model.HighRiskEquipmentList?.Any() == true)
            {
                <div class="mt-4">
                    <h4>High Risk Equipment</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Equipment ID</th>
                                    <th>Type</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var equipment in Model.HighRiskEquipmentList.Take(10))
                                {
                                    <tr>
                                        <td>@equipment.EquipmentId</td>
                                        <td>@(equipment.EquipmentType?.EquipmentTypeName ?? "Unknown")</td>
                                        <td>@(equipment.Building?.BuildingName ?? "Unknown")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h3>❌ No Data Available</h3>
            <p>The model data could not be loaded.</p>
        </div>
    }
</div>
