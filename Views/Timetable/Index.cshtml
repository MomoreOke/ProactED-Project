@model FEENALOoFINALE.Models.ViewModels.TimetableManagementViewModel
@using FEENALOoFINALE.Models.ViewModels
@using FEENALOoFINALE.Models
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">@Model.PageTitle</h1>
                    <p class="text-muted mb-0">@Model.PageDescription</p>
                </div>
                <div>
                    <a href="@Url.Action("Upload")" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Upload Semester Timetable
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Notifications -->
    @if (Model.Notifications.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                @foreach (var notification in Model.Notifications)
                {
                    <div class="alert alert-@(notification.Type.ToString().ToLower()) alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-@(notification.Type == NotificationType.Success ? "check-circle" : 
                                            notification.Type == NotificationType.Warning ? "exclamation-triangle" : 
                                            notification.Type == NotificationType.Error ? "x-circle" : "info-circle") me-2"></i>
                            <div>
                                @notification.Message
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            </div>
        </div>
    }

    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Current Semester Status -->
    @if (Model.CurrentSemester != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-@(Model.CurrentSemester.Status == SemesterStatus.Active ? "success" : 
                                        Model.CurrentSemester.Status == SemesterStatus.Upcoming ? "info" : 
                                        Model.CurrentSemester.Status == SemesterStatus.Completed ? "secondary" : "warning")">
                    <div class="card-header bg-@(Model.CurrentSemester.Status == SemesterStatus.Active ? "success" : 
                                                Model.CurrentSemester.Status == SemesterStatus.Upcoming ? "info" : 
                                                Model.CurrentSemester.Status == SemesterStatus.Completed ? "secondary" : "warning") text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-calendar-event"></i> Current Semester: @Model.CurrentSemester.SemesterName
                            </h5>
                            <span class="badge bg-light text-dark">@Model.CurrentSemester.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <strong>Duration:</strong> @Model.CurrentSemester.StartDate.ToString("MMM dd, yyyy") - @Model.CurrentSemester.StartDate.AddDays(Model.CurrentSemester.NumberOfWeeks * 7).ToString("MMM dd, yyyy")
                                    <br><small class="text-muted">@Model.CurrentSemester.NumberOfWeeks weeks</small>
                                </div>
                                <div class="mb-3">
                                    <strong>Progress:</strong>
                                    <div class="progress mb-2" style="height: 20px;">
                                        <div class="progress-bar bg-@(Model.ProgressInfo?.RequiresNewSemester == true ? "warning" : "success")" 
                                             role="progressbar" 
                                             style="width: @(Model.ProgressInfo?.ProgressPercentage ?? 0)%"
                                             aria-valuenow="@(Model.ProgressInfo?.ProgressPercentage ?? 0)" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @(Model.ProgressInfo?.ProgressPercentage.ToString("F1") ?? "0.0")%
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        Week @(Model.ProgressInfo?.CurrentWeek ?? 0) of @Model.CurrentSemester.NumberOfWeeks
                                        @if (Model.ProgressInfo?.DaysRemaining > 0)
                                        {
                                            <span class="ms-2">â€¢ @Model.ProgressInfo.DaysRemaining days remaining</span>
                                        }
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <strong>Equipment Usage:</strong>
                                    <br><span class="text-info">@(Model.Statistics?.TotalUsageHours.ToString("F0") ?? "0") total hours</span>
                                </div>
                                <div class="mb-3">
                                    <strong>Processing Status:</strong>
                                    <br><span class="badge bg-@(Model.CurrentSemester.ProcessingStatus == SemesterProcessingStatus.Completed ? "success" : 
                                                              Model.CurrentSemester.ProcessingStatus == SemesterProcessingStatus.Processing ? "warning" : 
                                                              Model.CurrentSemester.ProcessingStatus == SemesterProcessingStatus.Failed ? "danger" : "secondary")">
                                        @Model.CurrentSemester.ProcessingStatus
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.CurrentSemester.ProcessingMessage))
                                    {
                                        <br><small class="text-muted">@Model.CurrentSemester.ProcessingMessage</small>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.ProgressInfo.RequiresNewSemester)
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Semester Completion Notice:</strong> 
                                @if (Model.CurrentSemester.Status == SemesterStatus.Completed)
                                {
                                    <span>This semester has been completed. Please upload the next semester's timetable.</span>
                                }
                                else
                                {
                                    <span>This semester is nearly complete (@Model.ProgressInfo.ProgressPercentage.ToString("F1")%). Consider preparing the next semester's timetable.</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Progress", new { id = Model.CurrentSemester.SemesterId })" class="btn btn-outline-primary">
                                <i class="bi bi-graph-up"></i> View Progress
                            </a>
                            <a href="@Url.Action("Details", new { id = Model.CurrentSemester.SemesterId })" class="btn btn-outline-info">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a href="@Url.Action("Edit", new { id = Model.CurrentSemester.SemesterId })" class="btn btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Active Semester -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-exclamation-triangle"></i> No Active Semester
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-2">Semester Management Required</h6>
                                <p class="text-muted mb-0">
                                    No active semester is currently configured. Upload a semester timetable to enable:
                                </p>
                                <ul class="text-muted mt-2">
                                    <li>Equipment usage tracking and analytics</li>
                                    <li>Enhanced predictive maintenance accuracy</li>
                                    <li>Semester-based maintenance scheduling</li>
                                    <li>Academic period progress monitoring</li>
                                </ul>
                            </div>
                            <div class="col-md-4 text-center">
                                <a href="@Url.Action("Upload")" class="btn btn-warning btn-lg">
                                    <i class="bi bi-upload"></i> Upload Semester Timetable
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart"></i> Semester Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="bi bi-calendar-check text-primary display-4"></i>
                                <h4 class="mt-2">@(Model.Statistics?.TotalSemesters ?? 0)</h4>
                                <p class="text-muted mb-0">Total Semesters</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="bi bi-play-circle text-success display-4"></i>
                                <h4 class="mt-2">@(Model.Statistics?.ActiveSemesters ?? 0)</h4>
                                <p class="text-muted mb-0">Active Semesters</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="bi bi-check-circle text-info display-4"></i>
                                <h4 class="mt-2">@(Model.Statistics?.CompletedSemesters ?? 0)</h4>
                                <p class="text-muted mb-0">Completed</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="bi bi-clock text-warning display-4"></i>
                                <h4 class="mt-2">@(Model.Statistics?.PendingProcessing ?? 0)</h4>
                                <p class="text-muted mb-0">Pending Processing</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Semesters -->
    @if (Model.RecentSemesters.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-clock-history"></i> Recent Semesters
                        </h5>
                        <a href="@Url.Action("List")" class="btn btn-outline-primary btn-sm">
                            View All <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Semester</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Progress</th>
                                        <th>Uploaded</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var semester in Model.RecentSemesters.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@semester.SemesterName</strong>
                                                @if (semester.IsActive)
                                                {
                                                    <span class="badge bg-success ms-2">Active</span>
                                                }
                                            </td>
                                            <td>
                                                @semester.StartDate.ToString("MMM dd") - @semester.StartDate.AddDays(semester.NumberOfWeeks * 7).ToString("MMM dd, yyyy")
                                                <br><small class="text-muted">@semester.NumberOfWeeks weeks</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(semester.Status == SemesterStatus.Active ? "success" : 
                                                                   semester.Status == SemesterStatus.Upcoming ? "info" : 
                                                                   semester.Status == SemesterStatus.Completed ? "secondary" : "warning")">
                                                    @semester.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 8px; width: 80px;">
                                                    <div class="progress-bar" role="progressbar" style="width: @semester.ProgressPercentage%"></div>
                                                </div>
                                                <small>@semester.ProgressPercentage.ToString("F1")%</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@semester.UploadDate.ToString("MMM dd, yyyy")</small>
                                                @if (semester.UploadedBy != null)
                                                {
                                                    <br><small class="text-muted">by @semester.UploadedBy.FullName</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", new { id = semester.SemesterId })" class="btn btn-outline-primary" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (semester.Status == SemesterStatus.Active)
                                                    {
                                                        <a href="@Url.Action("Progress", new { id = semester.SemesterId })" class="btn btn-outline-info" title="View Progress">
                                                            <i class="bi bi-graph-up"></i>
                                                        </a>
                                                    }
                                                    <a href="@Url.Action("Edit", new { id = semester.SemesterId })" class="btn btn-outline-secondary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 10 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 10000);
        });
    </script>
}