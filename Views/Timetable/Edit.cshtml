@model FEENALOoFINALE.Models.ViewModels.SemesterEditViewModel
@using FEENALOoFINALE.Models.ViewModels
@{
    ViewData["Title"] = $"Edit Semester - {Model.SemesterName}";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Timetable Management</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = Model.SemesterId })">@Model.SemesterName</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Edit Semester</h1>
                    <p class="text-muted mb-0">Modify semester information and settings</p>
                </div>
                <div>
                    <a href="@Url.Action("Details", new { id = Model.SemesterId })" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editSemesterForm">
        <input type="hidden" asp-for="SemesterId" />
        
        <div class="row">
            <!-- Main Form -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pencil"></i> Semester Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SemesterName" class="form-label">Semester Name <span class="text-danger">*</span></label>
                                    <input asp-for="SemesterName" class="form-control" placeholder="e.g., Fall 2024, Spring 2025" />
                                    <span asp-validation-for="SemesterName" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                                    <input asp-for="StartDate" type="date" class="form-control" id="startDate" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="NumberOfWeeks" class="form-label">Number of Weeks <span class="text-danger">*</span></label>
                                    <input asp-for="NumberOfWeeks" type="number" class="form-control" min="1" max="52" />
                                    <span asp-validation-for="NumberOfWeeks" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="IsActive" class="form-label">Status</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">Active Semester</label>
                                    </div>
                                    <div class="form-text">Active semesters are used for equipment usage tracking</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes for this semester"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Timetable File Section -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-file-pdf"></i> Timetable File
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.CurrentFileName))
                        {
                            <div class="alert alert-info">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-file-pdf text-danger me-2 fs-4"></i>
                                    <div class="flex-grow-1">
                                        <strong>Current File:</strong> @System.IO.Path.GetFileName(Model.CurrentFileName)
                                        <br>
                                        <small class="text-muted">Uploaded on @Model.UploadDate.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("DownloadTimetable", new { id = Model.SemesterId })" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <div class="mb-3">
                            <label for="newTimetableFile" class="form-label">
                                @(string.IsNullOrEmpty(Model.CurrentFileName) ? "Upload Timetable File" : "Replace Timetable File")
                            </label>
                            <input type="file" class="form-control" id="newTimetableFile" name="NewTimetableFile" accept=".pdf" />
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> 
                                Upload a PDF file containing the semester timetable. Maximum file size: 10MB.
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="reprocessTimetable" name="ReprocessTimetable" />
                            <label class="form-check-label" for="reprocessTimetable">
                                Reprocess timetable data and update equipment usage calculations
                            </label>
                            <div class="form-text">
                                Check this if you want to re-analyze the timetable and update all equipment usage data.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Current Status -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i> Current Status
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-6">Processing:</dt>
                            <dd class="col-6">
                                <span class="badge bg-@(Model.ProcessingStatus == SemesterProcessingStatus.Completed ? "success" : 
                                                       Model.ProcessingStatus == SemesterProcessingStatus.Processing ? "warning" : 
                                                       Model.ProcessingStatus == SemesterProcessingStatus.Failed ? "danger" : "secondary")">
                                    @Model.ProcessingStatus
                                </span>
                            </dd>
                            
                            <dt class="col-6">Upload Date:</dt>
                            <dd class="col-6">@Model.UploadDate.ToString("MMM dd, yyyy")</dd>
                            
                            <dt class="col-6">Uploaded By:</dt>
                            <dd class="col-6">@Model.UploadedByName</dd>
                            
                            @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
                            {
                                <dt class="col-12">Message:</dt>
                                <dd class="col-12">
                                    <small class="text-muted">@Model.ProcessingMessage</small>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
                
                <!-- Actions -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-gear"></i> Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            
                            <a href="@Url.Action("Details", new { id = Model.SemesterId })" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            
                            <hr>
                            
                            <a href="@Url.Action("Progress", new { id = Model.SemesterId })" class="btn btn-outline-info">
                                <i class="bi bi-graph-up"></i> View Progress
                            </a>
                            
                            @if (Model.IsActive)
                            {
                                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#archiveModal">
                                    <i class="bi bi-archive"></i> Archive Semester
                                </button>
                            }
                            
                            @if (!Model.IsActive)
                            {
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Delete Semester
                                </button>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Help -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-question-circle"></i> Help
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="accordion accordion-flush" id="helpAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#statusHelp">
                                        Status Guidelines
                                    </button>
                                </h2>
                                <div id="statusHelp" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                    <div class="accordion-body">
                                        <ul class="list-unstyled">
                                            <li><strong>Upcoming:</strong> Semester hasn't started yet</li>
                                            <li><strong>Active:</strong> Currently in progress</li>
                                            <li><strong>Completed:</strong> Finished successfully</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#fileHelp">
                                        File Requirements
                                    </button>
                                </h2>
                                <div id="fileHelp" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                    <div class="accordion-body">
                                        <ul class="list-unstyled">
                                            <li>• PDF format only</li>
                                            <li>• Maximum 10MB file size</li>
                                            <li>• Text-based (not scanned images)</li>
                                            <li>• Contains equipment schedules</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Archive Modal -->
<div class="modal fade" id="archiveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Archive Semester</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to archive this semester?</p>
                <p class="text-muted">This will mark the semester as completed and prevent further modifications to equipment usage data.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Archive" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.SemesterId" />
                    <button type="submit" class="btn btn-warning">Archive Semester</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Semester</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Warning:</strong> This action cannot be undone!</p>
                <p>Deleting this semester will permanently remove:</p>
                <ul>
                    <li>All semester data and settings</li>
                    <li>Equipment usage records</li>
                    <li>Uploaded timetable file</li>
                    <li>Progress tracking data</li>
                </ul>
                <p class="text-danger">Are you absolutely sure you want to delete this semester?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.SemesterId" />
                    <button type="submit" class="btn btn-danger">Delete Permanently</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Calculate weeks when dates change
            function calculateWeeks() {
                const startDate = new Date($('#startDate').val());
                const endDate = new Date($('#endDate').val());
                
                if (startDate && endDate && endDate > startDate) {
                    const timeDiff = endDate.getTime() - startDate.getTime();
                    const weeks = Math.ceil(timeDiff / (1000 * 3600 * 24 * 7));
                    $('#NumberOfWeeks').val(weeks);
                } else {
                    $('#NumberOfWeeks').val('');
                }
            }
            
            $('#startDate, #endDate').change(calculateWeeks);
            
            // Status help text
            $('#statusSelect').change(function() {
                const status = $(this).val();
                let helpText = '';
                
                switch(status) {
                    case '@SemesterStatus.Upcoming':
                        helpText = 'Semester is scheduled but hasn\'t started yet.';
                        break;
                    case '@SemesterStatus.Active':
                        helpText = 'Semester is currently in progress and tracking equipment usage.';
                        break;
                    case '@SemesterStatus.Completed':
                        helpText = 'Semester has finished successfully.';
                        break;
                }
                
                $('#statusHelp').text(helpText);
            });
            
            // Trigger initial status help
            $('#statusSelect').trigger('change');
            
            // File upload validation
            $('#newTimetableFile').change(function() {
                const file = this.files[0];
                if (file) {
                    if (file.type !== 'application/pdf') {
                        alert('Please select a PDF file.');
                        $(this).val('');
                        return;
                    }
                    
                    if (file.size > 10 * 1024 * 1024) { // 10MB
                        alert('File size must be less than 10MB.');
                        $(this).val('');
                        return;
                    }
                }
            });
            
            // Form validation
            $('#editSemesterForm').submit(function(e) {
                const startDate = new Date($('#startDate').val());
                const endDate = new Date($('#endDate').val());
                
                if (endDate <= startDate) {
                    e.preventDefault();
                    alert('End date must be after start date.');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}