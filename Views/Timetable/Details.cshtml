@model FEENALOoFINALE.Models.ViewModels.SemesterDetailsViewModel
@using FEENALOoFINALE.Models.ViewModels
@{
    ViewData["Title"] = $"Semester Details - {Model.Semester.SemesterName}";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Timetable Management</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("List")">All Semesters</a></li>
                    <li class="breadcrumb-item active">@Model.Semester.SemesterName</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">@Model.Semester.SemesterName</h1>
                    <p class="text-muted mb-0">
                        @Model.Semester.StartDate.ToString("MMMM dd, yyyy") - @Model.Semester.EndDate.ToString("MMMM dd, yyyy")
                        <span class="badge bg-@(Model.Semester.Status == SemesterStatus.Active ? "success" : 
                                               Model.Semester.Status == SemesterStatus.Upcoming ? "info" : 
                                               Model.Semester.Status == SemesterStatus.Completed ? "secondary" : "warning") ms-2">
                            @Model.Semester.Status
                        </span>
                    </p>
                </div>
                <div>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @if (Model.CanEdit)
                        {
                            <a href="@Url.Action("Edit", new { id = Model.Semester.SemesterId })" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        }
                        @if (Model.Semester.Status == SemesterStatus.Active)
                        {
                            <a href="@Url.Action("Progress", new { id = Model.Semester.SemesterId })" class="btn btn-success">
                                <i class="bi bi-graph-up"></i> View Progress
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Semester Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-@(Model.Semester.Status == SemesterStatus.Active ? "success" : 
                                    Model.Semester.Status == SemesterStatus.Upcoming ? "info" : 
                                    Model.Semester.Status == SemesterStatus.Completed ? "secondary" : "warning")">
                <div class="card-header bg-@(Model.Semester.Status == SemesterStatus.Active ? "success" : 
                                            Model.Semester.Status == SemesterStatus.Upcoming ? "info" : 
                                            Model.Semester.Status == SemesterStatus.Completed ? "secondary" : "warning") text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Semester Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <strong>Start Date:</strong><br>
                                    <span class="text-primary">@Model.Semester.StartDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="col-6 mb-3">
                                    <strong>End Date:</strong><br>
                                    <span class="text-primary">@Model.Semester.EndDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="col-6 mb-3">
                                    <strong>Duration:</strong><br>
                                    <span class="text-info">@Model.Semester.NumberOfWeeks weeks</span>
                                </div>
                                <div class="col-6 mb-3">
                                    <strong>Status:</strong><br>
                                    <span class="badge bg-@(Model.Semester.Status == SemesterStatus.Active ? "success" : 
                                                       Model.Semester.Status == SemesterStatus.Upcoming ? "info" : 
                                                       Model.Semester.Status == SemesterStatus.Completed ? "secondary" : "warning")">
                                        @Model.Semester.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <strong>Progress:</strong><br>
                                    <div class="progress mb-1" style="height: 20px;">
                                        <div class="progress-bar bg-@(Model.ProgressInfo.RequiresNewSemester ? "warning" : "success")" 
                                             role="progressbar" 
                                             style="width: @Model.ProgressInfo.ProgressPercentage%">
                                            @Model.ProgressInfo.ProgressPercentage.ToString("F1")%
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        Week @Model.ProgressInfo.CurrentWeek of @Model.Semester.NumberOfWeeks
                                        @if (Model.ProgressInfo.DaysRemaining > 0)
                                        {
                                            <span>â€¢ @Model.ProgressInfo.DaysRemaining days remaining</span>
                                        }
                                    </small>
                                </div>
                                <div class="col-6 mb-3">
                                    <strong>Processing Status:</strong><br>
                                    <span class="badge bg-@(Model.Semester.ProcessingStatus == SemesterProcessingStatus.Completed ? "success" : 
                                                       Model.Semester.ProcessingStatus == SemesterProcessingStatus.Processing ? "warning" : 
                                                       Model.Semester.ProcessingStatus == SemesterProcessingStatus.Failed ? "danger" : "secondary")">
                                        @Model.Semester.ProcessingStatus
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.Semester.ProcessingMessage))
                                    {
                                        <br><small class="text-muted">@Model.Semester.ProcessingMessage</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Statistics.TotalUsageHours.ToString("F0")</h4>
                            <p class="mb-0">Total Hours</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-clock-history display-6"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Equipment Usage Details -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-check"></i> Equipment Usage Details
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.EquipmentUsage.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Equipment</th>
                                        <th>Location</th>
                                        <th>Total Semester Hours</th>
                                        <th>Usage Level</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usage in Model.EquipmentUsage.OrderByDescending(u => u.TotalSemesterHours))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@usage.EquipmentName</strong>
                                                <br><small class="text-muted">@usage.EquipmentType</small>
                                            </td>
                                            <td>
                                                @usage.Location
                                            </td>
                                            <td>
                                                <strong>@usage.TotalSemesterHours.ToString("F0")h</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">N/A</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                            <h5>No Equipment Usage Data</h5>
                            <p class="text-muted">No equipment usage data has been processed for this semester yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Weekly Progress -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart"></i> Weekly Progress
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.WeeklyProgress.Any())
                    {
                        <div class="row">
                            @foreach (var week in Model.WeeklyProgress)
                            {
                                <div class="col-md-2 col-sm-4 col-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body text-center p-2">
                                            <h6 class="card-title mb-1">Week @week.WeekNumber</h6>
                                            <!-- Add more here if you have other properties -->
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                            <h5>No Weekly Progress Data</h5>
                            <p class="text-muted">Weekly progress data will be available once the semester begins.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- File Information -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-file-pdf"></i> Timetable File Information
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Semester.OriginalFileName))
                    {
                        <div class="mb-3">
                            <strong>File Name:</strong><br>
                            <span class="text-primary">@Model.Semester.OriginalFileName</span>
                        </div>
                        <div class="mb-3">
                            <strong>File Size:</strong><br>
                            <span class="text-info">@(((Model.Semester.FileSizeBytes ?? 0) / 1024.0 / 1024.0).ToString("F2")) MB</span>
                        </div>
                        <div class="mb-3">
                            <strong>Upload Date:</strong><br>
                            <span class="text-muted">@Model.Semester.UploadDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                        </div>
                        @if (Model.Semester.UploadedBy != null)
                        {
                            <div class="mb-3">
                                <strong>Uploaded By:</strong><br>
                                <span class="text-muted">@Model.Semester.UploadedBy.FullName</span>
                            </div>
                        }
                        @if (Model.CanReprocess)
                        {
                            <div class="mt-3">
                                <a href="@Url.Action("Edit", new { id = Model.Semester.SemesterId })" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-arrow-clockwise"></i> Reprocess File
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-file-x display-4 text-muted mb-2"></i>
                            <p class="text-muted">No timetable file uploaded</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-gear"></i> Processing Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Processing Status:</strong><br>
                        <span class="badge bg-@(Model.Semester.ProcessingStatus == SemesterProcessingStatus.Completed ? "success" : 
                                           Model.Semester.ProcessingStatus == SemesterProcessingStatus.Processing ? "warning" : 
                                           Model.Semester.ProcessingStatus == SemesterProcessingStatus.Failed ? "danger" : "secondary")">
                            @Model.Semester.ProcessingStatus
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Semester.ProcessingMessage))
                    {
                        <div class="mb-3">
                            <strong>Processing Message:</strong><br>
                            <span class="text-muted">@Model.Semester.ProcessingMessage</span>
                        </div>
                    }
                    <div class="mb-3">
                        <strong>Last Modified:</strong><br>
                        <span class="text-muted">@Model.Semester.LastModified.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                    </div>
                    <div class="mb-3">
                        <strong>Created:</strong><br>
                        <span class="text-muted">@Model.Semester.CreatedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-tools"></i> Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @if (Model.Semester.Status == SemesterStatus.Active)
                        {
                            <a href="@Url.Action("Progress", new { id = Model.Semester.SemesterId })" class="btn btn-success">
                                <i class="bi bi-graph-up"></i> View Progress Dashboard
                            </a>
                        }
                        @if (Model.CanEdit)
                        {
                            <a href="@Url.Action("Edit", new { id = Model.Semester.SemesterId })" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Semester
                            </a>
                        }
                        @if (Model.CanDelete)
                        {
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                                <i class="bi bi-trash"></i> Delete Semester
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (Model.CanDelete)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the semester "<strong>@Model.Semester.SemesterName</strong>"?</p>
                    <p class="text-danger">This action cannot be undone and will remove all associated equipment usage data.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@Model.Semester.SemesterId" />
                        <button type="submit" class="btn btn-danger">Delete Semester</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete() {
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}