@{
    ViewData["Title"] = "Semester Diagnostics";
}

<div class="container">
    <h2>Semester Diagnostics</h2>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Total Semesters:</strong> @ViewBag.TotalSemesters<br/>
            <strong>Deletable Semesters:</strong> @ViewBag.DeletableSemesters
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5>Semester Details</h5>
            </div>
            <div class="card-body">
                @Html.Raw(ViewBag.DiagnosticInfo)
            </div>
        </div>
        
        <div class="mt-3">
            <a href="@Url.Action("List")" class="btn btn-primary">Back to Semester List</a>
        </div>
    }
</div>
